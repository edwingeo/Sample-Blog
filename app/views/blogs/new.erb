<h3>Create Blog</h3>
<%= link_to 'Back',blogs_path%>
<% form_for @blog, blogs_path, :html => {:multipart => true }  do |f|%>
<%= error_messages_for :blog %>
<table border="" cellpadding="" cellspacing="">
  <tr>
    <td><%= f.label :blog_name%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_field :blog_name%></td>
  </tr>
  <tr><td><%= f.label :blog_description%>
  <%= f.text_area :blog_description%></td></tr>
  <tr><td><%= f.label :blog_email%>
  <%= f.text_field :blog_email%></td></tr>
  <tr>
    <td>
  <%#= f.file_field :photo%></td>
  </tr>
  <tr><td>
    <%= f.label :category_name%>
      <%= select_tag "blog[category_id]", options_for_select(Category.all.map{|c|[c.category_name,c.id]})%>
    </td></tr>
 
</table>
<%= submit_tag 'Save'%>

<%end%>
